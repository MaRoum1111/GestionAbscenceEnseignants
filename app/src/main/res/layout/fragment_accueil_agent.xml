<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AgentActivity">

    <!-- En-tête de l'application -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorPrimary"
        app:title="Tableau de bord"
        app:navigationIcon="@drawable/ic_menu"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Liste des enseignants avec leurs absences -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTeachers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/addAbsenceButton" />

    <!-- Bouton pour ajouter une absence -->
    <Button
        android:id="@+id/addAbsenceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter une absence"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewTeachers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Section des statistiques -->
    <LinearLayout
        android:id="@+id/statisticsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/addAbsenceButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Nombre d'absences -->
        <TextView
            android:id="@+id/absenceCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre d'absences: 0"
            android:textSize="18sp"
            android:padding="8dp"
            android:background="@drawable/rounded_edittext"
            android:textColor="#000"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"/>

        <!-- Autres statistiques à ajouter ici -->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

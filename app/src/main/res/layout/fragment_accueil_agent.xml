<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Bonjour message avec nom de l'enseignant et icÃ´ne -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- IcÃ´ne Ã  gauche -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="64dp"
            android:layout_height="62dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/icc_profile" />

        <!-- Texte "Bonjour" et nom -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bonjour ðŸ‘‹"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bonjourTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salwa Youssef"
                android:textSize="16sp"
                android:textColor="@color/textColor" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:orientation="horizontal">
            <!-- CardView pour Total Enseignants -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="163dp"
                    android:layout_height="96dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Image avant le texte -->
                    <ImageView
                        android:layout_width="41dp"
                        android:layout_height="68dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_teacher2" /> <!-- Remplacez ic_teacher par votre image -->

                    <!-- Texte -->
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="96dp"
                        android:layout_marginStart="0dp"
                        android:padding="19dp"
                        android:text="Total            Enseignants"
                        android:textColor="@color/blueblue"
                        android:textSize="11dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView pour Total Salles -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="89dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Image avant le texte -->
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_sallz" />

                    <!-- Texte -->
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="89dp"
                        android:layout_marginStart="16dp"
                        android:padding="16dp"
                        android:text="Total Salles :   70"
                        android:textColor="@color/blueblue"
                        android:textSize="10dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="3">

        </LinearLayout>

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="273dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_absences_count"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Nombre d'absences pour le jour sÃ©lectionnÃ© : 0"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>
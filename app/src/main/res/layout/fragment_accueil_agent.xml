<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Partie 1 : Total Enseignants et Salles -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#F5F5F5"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Partie 2 : Labels avec icÃ´nes et actions -->

        <LinearLayout
            android:layout_width="357dp"
            android:layout_height="122dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- CardView pour Total Enseignants -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="163dp"
                    android:layout_height="96dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Image avant le texte -->
                    <ImageView
                        android:layout_width="41dp"
                        android:layout_height="68dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_teacher2" /> <!-- Remplacez ic_teacher par votre image -->

                    <!-- Texte -->
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="96dp"
                        android:layout_marginStart="0dp"
                        android:padding="19dp"
                        android:text="@string/total_enseignants"
                        android:textColor="@color/blueblue"
                        android:textSize="11dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView pour Total Salles -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="89dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Image avant le texte -->
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_sallz" />

                    <!-- Texte -->
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="89dp"
                        android:layout_marginStart="16dp"
                        android:padding="16dp"
                        android:text="@string/total_salles"
                        android:textColor="@color/blueblue"
                        android:textSize="10dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="364dp"
            android:layout_height="123dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edittext"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="158dp"
                android:layout_height="77dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icc_chart"
                    app:tint="@color/blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="8dp"
                    android:text="@string/absence"
                    android:textColor="@color/blueblue"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="156dp"
                android:layout_height="79dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icc_absence"
                    app:tint="@color/blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="8dp"
                    android:text="@string/emplois"
                    android:textColor="@color/blueblue"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <!-- Partie 3 : Calendrier -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="3">

        </LinearLayout>

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="350dp"
            android:layout_height="320dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white" />
    </LinearLayout>
</LinearLayout>
